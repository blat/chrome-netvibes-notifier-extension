{
    "name": "Netvibes Notifier",
    "version": "0.2.10",
    "manifest_version": 2,
    "description": "Displays the number of unread items in your Netvibes account.",
    "icons": {
        "128": "img/icon_128.png",
        "64": "img/icon_64.png",
        "32": "img/icon_32.png",
        "16": "img/icon_16.png"
    },
    "background": {
        "page": "background.html"
    },
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "web_accessible_resources": [
        "js/application.js",
        "js/background.js",
        "js/options.js"
    ],
    "permissions": [
        "tabs",
        "*://*.netvibes.com/*"
    ],
    "browser_action": {
        "default_title": "",
        "default_icon": "img/disabled_64.png"
    }
}
